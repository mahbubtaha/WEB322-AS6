<section class="main-section">
  <h2>Items<a href="/items/add" class="btn btn-success pull-right ml-10">Add Post</a></h2>
  {{! <hr /> }}
  <div class="row w-100">
    <div class="col-md-12 w-100">
      <div class="table-responsive w-100">
        <table class="table table-striped table-bordered table-hover w-100">
          <thead class="thead-dark">
            <tr class="text-center">
              <th>Item ID</th>
              <th>Title</th>
              <th>Post Date</th>
              <th>Price</th>
              <th>Category</th>
              <th>Published</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{#each items}}
              <tr>
                <td class="text-center">{{id}}</td>
                <td>{{title}}</td>
                <td class="text-center">{{#formatDate postDate}}{{/formatDate}}</td>
                <td class="text-right">${{price}}</td>
                <td><a href="/items?category={{category}}">{{category}}</a></td>
                <td class="text-center">{{#if
                    published
                  }}Yes{{else}}No{{/if}}</td>
                <td><a href="/items/delete/{{id}}" class="btn btn-danger">remove</a></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{#unless items}}
        <div class="col-md-12 text-center mt-4">
          <strong class="text-danger">{{message}}</strong>
        </div>
      {{/unless}}
    </div>
  </div>
</section>
